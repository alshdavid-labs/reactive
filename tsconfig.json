{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "outDir": ".",
    "declarationDir": ".",
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "index.js",
    "index.d.ts",
    "preact/**/*",
    "react/**/*.d.ts",
    "react/**/*.js",
    "reactive/**/*",
    "rxjs/**.*"
  ]
}
